<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_list_white"
    android:onClick="hideSoftInputWindow" >

    <ImageView
        android:id="@+id/profile"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/chat_profile"
        android:paddingTop="5dp"
        android:src="@drawable/chat_user_male" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@id/profile"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/profile"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="16sp" />

</RelativeLayout>