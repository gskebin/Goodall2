<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/room_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_list_white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/stat_user_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="피크닉"
        android:textColor="#333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/stat_msg_cnt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="32"
        android:textColor="#666"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/stat_msg_per"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="20"
        android:textColor="#666"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/stat_like_cnt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="20"
        android:textColor="#666"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/stat_like_per"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="20"
        android:textColor="#666"
        android:textSize="16sp" />

</LinearLayout>