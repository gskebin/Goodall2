<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:orientation="vertical" >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/chat_logo"
        android:scaleType="fitXY"
        android:src="@drawable/chat_toast_top1" />
    
    <TextView
        android:id="@+id/alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_title"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/alert_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_toast_bg"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#444"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/alert_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_toast_bottom"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/chat_ok"
        android:textColor="#444"
        android:textSize="20sp" />

</LinearLayout>